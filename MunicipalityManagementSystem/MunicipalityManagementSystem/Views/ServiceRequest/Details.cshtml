@model MunicipalityManagementSystem.Models.ServiceRequest

@{
    ViewData["Title"] = "Service Request Details";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Service Type: @Model.ServiceType</h5>
        <p class="card-text"><strong>Citizen:</strong> @Model.Citizen.FullName</p>
        <p class="card-text"><strong>Request Date:</strong> @Model.RequestDate.ToShortDateString()</p>
        <p class="card-text"><strong>Status:</strong> @Model.Status</p>
    </div>
</div>

<a href="@Url.Action("Index", "ServiceRequest")" class="btn btn-secondary">Back to Service Requests</a>
