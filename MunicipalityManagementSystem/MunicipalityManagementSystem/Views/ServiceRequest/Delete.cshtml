@model MunicipalityManagementSystem.Models.ServiceRequest

@{
    ViewData["Title"] = "Delete Service Request";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-danger">
    <p>Are you sure you want to delete the service request for <strong>@Model.ServiceType</strong> submitted by <strong>@Model.Citizen.FullName</strong>?</p>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" name="id" value="@Model.RequestID" />
    <button type="submit" class="btn btn-danger">Delete Service Request</button>
    <a href="@Url.Action("Index", "ServiceRequest")" class="btn btn-secondary">Cancel</a>
</form>
