@model MunicipalityManagementSystem.Models.Citizen

@{
    ViewData["Title"] = "Citizen Details";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
</head>
<body>
<h1>Citizen Details</h1>
    <div>
        <p><strong>Full Name:</strong> @Model.FullName</p>
        <p><strong>Address:</strong> @Model.Address</p>
        <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Date of Birth:</strong> @Model.DateOfBirth</p>
        <p><strong>Registration Date:</strong> @Model.RegistrationDate.ToShortDateString()</p>
    </div>

<div>
        <a href="@Url.Action("Index", "Citizen")" class="btn btn-secondary ms-2">Back to List</a>
    </div>
</body>
</html>
