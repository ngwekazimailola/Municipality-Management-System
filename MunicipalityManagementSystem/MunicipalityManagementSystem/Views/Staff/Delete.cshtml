@model MunicipalityManagementSystem.Models.Staff

@{
    ViewData["Title"] = "Delete Staff Member";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <h1>Delete Staff Member</h1>

    <h3>Are you sure you want to delete staff member <strong>@Model.FullName</strong>?</h3>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" name="id" value="@Model.StaffID" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
    </form>

    <a href="@Url.Action("Index", "Staff")" class="btn btn-secondary">Cancel</a>
</body>
</html>
