@model IEnumerable<MunicipalityManagementSystem.Models.Staff>

@{
    ViewData["Title"] = "Staff Members";
    Layout = "_Layout";
}

<div class="container mt-4">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <p>
        <a href="@Url.Action("Create", "Staff")" class="btn btn-primary">Create New Staff Member</a>
    </p>

    <table class="table table-hover table-striped">
        <thead class="table-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Full Name</th>
                <th scope="col">Position</th>
                <th scope="col">Department</th>
                <th scope="col">Email</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var staff in Model.Select((value, index) => new { Value = value, Index = index + 1 }))
            {
                <tr>
                    <th scope="row">@staff.Index</th>
                    <td>@staff.Value.FullName</td>
                    <td>@staff.Value.Position</td>
                    <td>@staff.Value.Department</td>
                    <td>@staff.Value.Email</td>
                    <td>
                        <a href="@Url.Action("Details", "Staff", new { id = staff.Value.StaffID })" class="btn btn-info btn-sm">Details</a>
                        <a href="@Url.Action("Edit", "Staff", new { id = staff.Value.StaffID })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("Delete", "Staff", new { id = staff.Value.StaffID })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
