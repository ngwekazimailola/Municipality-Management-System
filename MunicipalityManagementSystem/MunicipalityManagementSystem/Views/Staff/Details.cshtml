@model MunicipalityManagementSystem.Models.Staff

@{
    ViewData["Title"] = "Staff Details";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
</head>
<body>
    <h1>Staff Details</h1>

    <dl>
        <dt>Full Name</dt>
        <dd>@Model.FullName</dd>

        <dt>Position</dt>
        <dd>@Model.Position</dd>

        <dt>Department</dt>
        <dd>@Model.Department</dd>

        <dt>Email</dt>
        <dd>@Model.Email</dd>

        <dt>Phone Number</dt>
        <dd>@Model.PhoneNumber</dd>

        <dt>Hire Date</dt>
        <dd>@Model.HireDate.ToShortDateString()</dd>
    </dl>
</body>
</html>
